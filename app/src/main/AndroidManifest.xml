<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobillium.fodamy">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fodamy"
        android:name=".App">
        <activity
            android:name=".view.recipe.RecipeDetailsActivity"
            android:exported="true" />

        <activity
            android:name=".view.recipe.RecipesActivity"
            android:exported="true">

        </activity>

        <activity
            android:name=".view.splash.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Fodamy.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".view.auth.AuthActivity"
            android:exported="true" />

        <activity
            android:name=".view.intro.screen.IntroActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".view.main.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>